{
    "manifest_version": 3,
    "name": "Click Ping One button",
    "description": "Clicks the ping button on load.",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "tabs", "storage"],
    "host_permissions": [
        "https://authenticator.pingone.com/pingid/ppm/devices"
    ],
    "action": {
        "default_title": "Ping Clicker",
        "default_popup": "popup.html"
    },
    "icons": {
      "16": "016-icon.png",
      "32": "032-icon.png",
      "48": "048-icon.png",
      "128": "128-icon.png"
    },
    "content_scripts": [
        {
          "matches": ["https://authenticator.pingone.com/pingid/ppm/devices"],
          "run_at": "document_idle",
          "js": ["content_script.js"]
        }
      ]
}